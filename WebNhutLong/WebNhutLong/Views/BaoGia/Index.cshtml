@using WebNhutLong.Models
@model IEnumerable<WebNhutLong.Models.tbl_BaoGia>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thông Tin báo giá</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                @Html.ActionLink("Thêm báo giá", "Create", "", new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Mã đơn hàng
                                </th>
                                <th>
                                   Khách hàng
                                </th>
                                <th>
                                    Tổng tiền
                                </th>
                                <th>
                                    Làm mẫu
                                </th>
                                <th>
                                   Ngày có mẫu
                                </th>
                                <th>
                                   Ngày báo giá
                                </th>
                                <th>
                                    Lần báo giá
                                </th>
                                <th>
                                   Duyệt báo giá
                                </th>
                                <th>
                                   Ngày bắt đầu dự kiến
                                </th>
                                <th>
                                    Ngày kết thúc dự kiến
                                </th>
                                <th>
                                    Ngày bắt đầu thực tế
                                </th>
                                <th>
                                    Ngày kết thúc thức tế
                                </th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (tbl_BaoGia item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodeProducts)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameProducts)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SolopProducts)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LoaigiayProducts)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OffsetFlexoProducts)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DanKimProducts)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QuyCachProducts)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoluongProducts)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GiaProducts)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDateProducts)
                                    </td>
                                    <td>
                                        @(item.StatusProducts == 1 ? "Hoạt động" : "Không hoạt động")
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.ID_Products }, htmlAttributes: new { @class = "btn btn-outline btn-primary btn-xs" })

                                        @Html.ActionLink("Xóa", "Delete", new { id = item.ID_Products }, htmlAttributes: new { @class = "btn btn-outline btn-primary btn-xs" })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->