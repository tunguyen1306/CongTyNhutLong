@using WebNhutLong.Models
@model IEnumerable<tbl_DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thông tin đơn hàng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                @Html.ActionLink("Thêm đơn hàng", "Create", "", new {@class = "btn btn-primary"})
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>

                                </th>
                                <th>
                                    Mã đơn hàng
                                </th>
                                <th>
                                    Tổng tiền
                                </th>
                                <th>
                                    Thời gian giao hàng
                                </th>
                                <th>
                                    Địa chỉ giao hàng
                                </th>
                                <th>
                                    Ngày tạo
                                </th>
                                <th>
                                    Trạng thái giao hàng
                                </th>
                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (tbl_DonHang item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink("Xem chi tiết", "ChitietDonhang", "DonHang", new { id = item.ID_Donhang }, new { @class = "btn btn-outline btn-primary btn-xs" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodeDonHang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalDonHang)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TimeGiaohang)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiaChiGiaoHang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateDate)

                                    </td>
                              
                                 
                                    <td>
                                        @(
                                            item.Status == 1 ? "Hoạt động" : "Không hoạt động"
                                          )

                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new {id = item.ID_Donhang}, new {@class = "btn btn-outline btn-primary btn-xs"})

                                        @Html.ActionLink("Xóa", "Delete", new {id = item.ID_Donhang}, new {@class = "btn btn-outline btn-primary btn-xs"})
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
