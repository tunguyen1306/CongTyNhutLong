@model WebNhutLong.Models.tbl_DonHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thêm đơn hàng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Form Elements
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label>Mã đơn hàng</label>

                                @Html.EditorFor(model => model.CodeDonHang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CodeDonHang, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label>Thời gian giao hàng</label>

                                @Html.EditorFor(model => model.TimeGiaohang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TimeGiaohang, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Địa chỉ giao hàng</label>

                                @Html.EditorFor(model => model.DiaChiGiaoHang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DiaChiGiaoHang, "", new { @class = "text-danger" })

                            </div>
                          



                        </div>
                        <div class="col-lg-6">

                           
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @Html.DropDownListFor(model => model.Status, new List<SelectListItem>
                                {
                                    new SelectListItem{Text="Hoạt động",Value="1"},
                                    new SelectListItem{Text="Không hoạt động",Value="0"}
                                }, htmlAttributes: new { @class = "form-control" })


                            </div>



                            <div class="form-group">
                                <label></label>
                                <input type="submit" value="Save" class="btn btn-primary" />
                                @Html.ActionLink("Hủy", "Index", "", new { @class = "btn btn-primary" })

                            </div>

                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
            }

        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
