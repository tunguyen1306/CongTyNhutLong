@using System.ServiceModel.Security
@using WebNhutLong.Models
@model IEnumerable<Totalcolumn>

@{
    ViewBag.Title = "ChitietDonhang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thông tin đơn hàng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
   
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin khách háng
            </div>
            <div class="panel-body">
                @{if (Model != null)
                  {
                      foreach (Totalcolumn it in Model)
                      {
                          <label>Mã đơn hàng:</label>
                          @it.CodeDonhang
                          <label>Tên khách hàng:</label>
                          @it.Namecustomers
                      }
                  }
                }
            </div>
            @*<div class="panel-footer">
                        Panel Footer
                    </div>*@
        </div>
           
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                @Html.ActionLink("Thêm sản phẩm", "Create","Products", "", new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Mã sản phẩm
                                </th>
                                <th>
                                    Tên sản phẩm
                                </th>
                                <th>
                                    Số lớp
                                </th>
                                <th>
                                    Loại giấy
                                </th>
                                <th>
                                    Offset/Flexo
                                </th>
                                <th>
                                    Dán/Kim
                                </th>
                                <th>
                                    Quy Cách
                                </th>
                                <th>
                                    Số lượng
                                </th>
                                <th>
                                    Giá
                                </th>
                                <th>
                                    Ngày tạo
                                </th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Totalcolumn item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodeProducts)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameProducts)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SolopProducts)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LoaigiayProducts)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OffsetFlexoProducts)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DanKimProducts)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QuyCachProducts)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoluongProducts)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GiaProducts)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDateProducts)
                                    </td>
                                    <td>
                                        @(item.StatusProducts == 1 ? "Hoạt động" : "Không hoạt động")
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.ID_Products }, htmlAttributes: new { @class = "btn btn-outline btn-primary btn-xs" })

                                        @Html.ActionLink("Xóa", "Delete", new { id = item.ID_Products }, htmlAttributes: new { @class = "btn btn-outline btn-primary btn-xs" })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
