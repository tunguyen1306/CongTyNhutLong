@model WebNhutLong.Models.tbl_Products

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sửa thông tin sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Form Elements
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ID_Products)
                            <div class="form-group">
                                <label>Mã khách hàng</label>

                                @Html.EditorFor(model => model.CodeProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CodeProducts, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label>Tên sản phẩm</label>

                                @Html.EditorFor(model => model.NameProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NameProducts, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Số lớp</label>

                                @Html.EditorFor(model => model.SolopProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SolopProducts, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Loại giấy</label>

                                @Html.EditorFor(model => model.LoaigiayProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LoaigiayProducts, "", new { @class = "text-danger" })

                            </div>


                            <div class="form-group">
                                <label>Offset/Flexo</label>

                                @Html.DropDownListFor(model => model.OffsetFlexoProducts, new List<SelectListItem> { new SelectListItem { Text = "Offset", Value = "0" }, new SelectListItem { Text = "Flexo", Value = "1" } },  htmlAttributes : new { @class = "form-control"  })
                                @Html.ValidationMessageFor(model => model.OffsetFlexoProducts, "", new { @class = "text-danger" })

                            </div>



                        </div>
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label>Dán kim</label>

                              @Html.DropDownListFor(model => model.OffsetFlexoProducts, new List<SelectListItem> { new SelectListItem { Text = "Dán keo", Value = "0" }, new SelectListItem { Text = "Đóng kim", Value = "1" } },  htmlAttributes:new { @class = "form-control"  })
                                @Html.ValidationMessageFor(model => model.DanKimProducts, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Số lượng</label>

                                @Html.EditorFor(model => model.SoluongProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SoluongProducts, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Giá</label>

                                @Html.EditorFor(model => model.GiaProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GiaProducts, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Ngày tạo</label>

                                @Html.EditorFor(model => model.CreatedDateProducts, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CreatedDateProducts, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @Html.DropDownListFor(model => model.StatusProducts, new List<SelectListItem>
                                {
                                    new SelectListItem{Text="Hoạt động",Value="1"},
                                    new SelectListItem{Text="Không hoạt động",Value="0"}
                                }, htmlAttributes: new { @class = "form-control" })


                            </div>



                            <div class="form-group">
                                <label></label>
                                <input type="submit" value="Save" class="btn btn-primary" />
                                @Html.ActionLink("Hủy", "Index", "", new { @class = "btn btn-primary" })

                            </div>

                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
            }

        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
