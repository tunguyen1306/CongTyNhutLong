@model IEnumerable<WebNhutLong.Models.tbl_OrderTem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thông Tin báo giá</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">

            <div class="panel-heading">
                @Html.ActionLink("Thêm báo giá", "Create", "", new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    Mã báo giá
                                </th>
                                <th>
                                   Tên khách hàng
                                </th>
                                <th>
                                   Ngày bắt đầu
                                </th>
                                <th>
                                    Ngày kết thúc
                                </th>
                                <th>
                                    Trạng thái
                                </th>
                              
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.customer_id)
                                       

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.date_begin)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.date_end)
                                       
                                    </td>
                                    <td >

                                       
                                            @(
 item.status == 1 ? "Hoạt động" : "Không hoạt động"
                                            )
                                  



                                    </td>

                                   
                                    <td>
                                     
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.id }, htmlAttributes: new { @class = "btn btn-outline btn-primary btn-xs" })

                                        @Html.ActionLink("Xóa", "Delete", new { id = item.id }, htmlAttributes: new { @class = "btn btn-outline btn-primary btn-xs" })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->